<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/transaction_in_preview_bottom"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_primary"
                android:gravity="center"
                android:padding="@dimen/spacing_medium"
                android:text="VEÍCULO"
                android:textColor="@color/text_tertiary"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transaction_in_preview_plate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_title"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/spacing_medium"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TIPO"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/transaction_in_preview_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_large" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="MARCA"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/transaction_in_preview_brand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_large" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="COR"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/transaction_in_preview_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_large" />


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transaction_in_preview_client"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/text_primary"
                    android:gravity="center"
                    android:padding="@dimen/spacing_medium"
                    android:text="CLIENTE"
                    android:textColor="@color/text_tertiary"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:gravity="center"
                    android:text="DOCUMENTO"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/transaction_in_preview_client_document"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:gravity="center"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:gravity="center"
                    android:text="NOME"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/transaction_in_preview_client_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:gravity="center"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_large" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:gravity="center"
                    android:text="OBSERVAÇÕES"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_xlarge"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/transaction_in_preview_client_observation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:layout_marginBottom="@dimen/spacing_medium"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_large" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/transaction_in_preview_bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:padding="@dimen/spacing_medium">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/transaction_in_preview_finish_ticket"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Finalizar  {faw-key}"
            android:textSize="@dimen/text_size_large"
            android:theme="@style/Button.Success" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/transaction_in_preview_finish"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="Finalizar"
            android:textSize="@dimen/text_size_large"
            android:theme="@style/Button.Success" />


    </RelativeLayout>

</RelativeLayout>
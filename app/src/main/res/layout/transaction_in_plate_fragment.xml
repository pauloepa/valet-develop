    <LinearLayout
        android:id="@+id/transaction_in_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_clear_height"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/transaction_in_plate_clear"
            android:theme="@style/Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/button_clear_size"
            android:gravity="center"
            android:text="Limpar"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/transaction_in_plate_next"
            android:theme="@style/Button.Success"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/button_clear_size"
            android:text="Avançar"/>

    </LinearLayout>

